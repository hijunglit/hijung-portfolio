mixin projects(project)
    .project 
        .project_header 
            h1.project_title=project.name
        .project_content 
            .project_main
                .project_visual
                    img(src=project.img, alt="project image")
                .project_description
                    .text-post
                        .content__slate 
                            p=project.desc
                    .text-post.sub
                        p.flex-wrap
                            each tool in project.tools 
                                span=tool 
                    .text-post 
                        ul.feature-list
                            each item in project.features 
                                li
                                    p &#x2022; #{item} 
            p.project_link
                a(href=project.url target="_blank") Link &rarr;
                a(href=project.github target="_blank") Github &rarr; 
                a(href=`/projects/${project.key}/detail`) Detail &rarr;
                